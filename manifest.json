{
	"name": "Trello Scrum",
	"version": "1.31",
	"description": "Adds Scrum to your Trello",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["jquery-1.7.1.min.js","trelloscrum.js"],
			"css": ["trelloscrum.css"]
		}
	],
	"manifest_version" : 2,
    "icons": { "128": "trello-scrum-icon.png" },
    "web_accessible_resources": [
	    "images/storypoints-icon.png",
	    "images/points-done.png"
    ]
}
